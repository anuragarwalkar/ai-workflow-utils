# Server Configuration
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Request Limits
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# AI Provider Configuration
# 1. OpenAI (Official ChatGPT API) - Priority 1
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-vision-preview

# 2. OpenAI Compatible API (e.g., Claude, local models, etc.) - Priority 2
OPENAI_COMPATIBLE_BASE_URL=https://api.anthropic.com
OPENAI_COMPATIBLE_API_KEY=your_api_key_here
OPENAI_COMPATIBLE_MODEL=claude-3-sonnet-20240229

# 3. Google Gemini - Priority 3
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro-vision

# 4. Ollama (Local models) - Priority 4
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llava

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_TOKEN=your_jira_token_here

# Bitbucket Configuration
BITBUCKET_AUTHORIZATION_TOKEN=your_bitbucket_token_here
BIT_BUCKET_URL=https://your-bitbucket-server.com

# Mocking
MOCK_MODE=true
